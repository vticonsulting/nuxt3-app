{
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.associations": {
    "*.css": "postcss"
  },
  "[markdown]": {
    "editor.formatOnSave": true
  },
  "[vue]": {
      "editor.tabSize": 2,
  },
  "[javascript]": {
    "editor.tabSize": 2,
  },
  "[typescript]": {
    "editor.tabSize": 2,
  }
}
